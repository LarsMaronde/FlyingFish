<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@android:style/Theme.NoTitleBar"
        android:background="#1A283E">

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="143dp"
            android:layout_height="140dp"
            android:layout_marginTop="76dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fish_hr" />

    <Button
            android:id="@+id/levelMenu"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_background"
            android:shadowColor="#00FFFFFF"
            android:text="LOG IN"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#00BFFF"
            android:textColorHint="#D5D5D5"
            app:layout_constraintEnd_toEndOf="@+id/passwordField"
            app:layout_constraintStart_toStartOf="@+id/passwordField"
            app:layout_constraintTop_toBottomOf="@+id/passwordField"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="login"/>

    <Button
            android:id="@+id/signupButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="#00FFFFFF"
            android:shadowColor="#00FFFFFF"
            android:text="Sign up"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#00BFFF"
            android:textColorHint="#D5D5D5"
            app:layout_constraintEnd_toEndOf="@+id/levelMenu"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="@+id/levelMenu"
            app:layout_constraintTop_toBottomOf="@+id/levelMenu"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="register"/>

    <EditText
            android:id="@+id/passwordField"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#2E4167"
            android:ems="10"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textColorHint="#B1B1B1"
            app:layout_constraintEnd_toEndOf="@+id/usernameField"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/usernameField"
            app:layout_constraintTop_toBottomOf="@+id/usernameField" />

    <EditText
            android:id="@+id/usernameField"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:background="#2E4167"
            android:ems="10"
            android:hint="USER NAME"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#B1B1B1"
            app:layout_constraintBottom_toTopOf="@+id/passwordField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flying Fish"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

</androidx.constraintlayout.widget.ConstraintLayout>